<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MapViewFragment">

    <RelativeLayout
        android:id="@+id/topMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:background="@drawable/map_view_header"
                android:contentDescription="sdfsda"
                android:visibility="visible" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/topHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your guide to"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/exploring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/topHeader"
                android:text="exploring"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/bottomHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topHeader"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="Florida's Space Coast."
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="italic" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="165dp"
            android:text="TRAILS NEAR YOU"
            android:textColor="@color/colorPrimary"
            android:textFontWeight=" "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_list_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView4"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:focusable="true"
            android:text="List View"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
    </RelativeLayout>


    <fragment
        android:id="@+id/fMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/topMain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        tools:context=".ui.MapViewFragment" />

</RelativeLayout>